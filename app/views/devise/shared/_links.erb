<%- if controller_name != 'sessions' %>
  <%= link_to "Einloggen", new_session_path(resource_name), :id => 'sign_in' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Du hast noch keine Benutzerkennung?", new_registration_path(resource_name), :id => 'sign_up' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Du hast Dein Passwort vergessen?", new_password_path(resource_name), :id => 'forgot_password' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Du hast keine BestÃ¤tigungsmail erhalten?", new_confirmation_path(resource_name), :id => 'confirm' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Dein Account ist gesperrt?", new_unlock_path(resource_name), :id => 'unlock' %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>