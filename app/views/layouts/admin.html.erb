<!DOCTYPE html>
<% titleline = "ADMINISTRATION - #{SoftwareVersion.appname}" %>
<html>
<head>
  <title><%= titleline %></title>
  <%= favicon_link_tag "#{@lug.favicon_url}" %>
  <meta name="application-name" content="<%= "ADMINISTRATION - #{SoftwareVersion.appname} #{SoftwareVersion.versionstring}" %>">
  <meta name="description" content="<%= "#{@lug.name} event management admin area" %>">
  <meta name="copyright" content="(c) 2010-2024 Thomas Herrmann <mail@thoherr.de>">
  <%= render "shared/meta_includes" %>
</head>
<body class="<%= @stage%> <%= I18n.locale%>">

<div id="mainTitle">
  <%= image_tag "#{@lug.logo_url}", class: "LugLogo" %>
  <span class="VersionText"><% if user_signed_in? %><%= t('logged_in_as') + " #{current_user.email} - " %><% end %><%= "Version #{SoftwareVersion.versionstring} #{@stage}" %></span>
  <span class="TitleText"><%= titleline %></span>
</div>

<div id="mainNavi">
  <%= render "shared/admin_navi" %>
</div>

<div id="mainContent">
  <%= render "shared/flashes" %>
  <%= yield %>
</div>

</body>
</html>
